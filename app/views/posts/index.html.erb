<% title "Posts" %>

<% @post_months.each do |month, posts| %>
	<h3><%= month.strftime("%A, %B %e") %></h3>
	<% for post in posts %>
	<p>
		<%= post.created_at.strftime("%I:%M %p") %>
		(<%= post.user.username %>)
		<strong><%= link_to post.title, post %></strong> - 
		<%= post.body %>
	</p>
	<% end %>
<% end %>
