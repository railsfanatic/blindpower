<% title "Login" %>

<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
	<p>
		<label for="my_number">
		To prevent spam, please type the number
		<%= session[:captcha_value].en.numwords %>.</label><br />
		<%= text_field_tag "my_number" %>
  <p>
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
  </p>
  <p><%= f.submit "Login" %></p>
<% end %>


